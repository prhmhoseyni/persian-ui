{
  "name": "persian-ui",
  "description": "A component library for Tailwind CSS",
  "version": "1.2.0",
  "main": "main.js",
  "scripts": {
    "build": "npx prejss-cli dist/*.css --format commonjs",
    "base:sass": "sass src/modules/base/index.scss src/modules/base/index.css --watch",
    "base:pcss": "postcss src/modules/base/index.css -o dist/base.css --watch",
    "components:sass": "sass src/modules/components/index.scss src/modules/components/index.css --watch",
    "components:pcss": "postcss src/modules/components/index.css -o dist/components.css --watch",
    "utils:sass": "sass src/modules/utilities/index.scss src/modules/utilities/index.css --watch",
    "utils:pcss": "postcss src/modules/utilities/index.css -o dist/utilities.css --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prhmhoseyni/persian-ui.git"
  },
  "author": "Parham Hoseyni",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/prhmhoseyni/persian-ui/issues"
  },
  "homepage": "https://github.com/prhmhoseyni/persian-ui#readme",
  "keywords": [],
  "dependencies": {
    "color": "^4.2.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "sass": "^1.80.4",
    "tailwindcss": "^3.4.14"
  },
  "files": [
    "main.js",
    "config/",
    "dist/",
    "README.md"
  ]
}